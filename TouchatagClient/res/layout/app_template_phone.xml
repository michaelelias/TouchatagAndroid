<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content">
    <EditText
	android:layout_height="wrap_content"
	android:id="@+id/txt_apptemplate_phone"
	android:layout_width="fill_parent"
	android:inputType="number" android:layout_toLeftOf="@+id/btn_apptemplate_phone" android:ellipsize="end" android:hint="Enter a phone number"></EditText>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:id="@+id/btn_apptemplate_phone" android:text="Pick Contact"></Button>
	
</RelativeLayout>