<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style
		name="CustomWindowTitleBackground">
		<item
			name="android:background">@drawable/header</item>
	</style>
	<style
		name="tt_theme"
		parent="android:Theme">
		<item
			name="android:windowTitleSize">35dip</item>
		<item
			name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
	</style>
	<style
		name="TTWindowStyle"
		parent="@android:style/TextAppearance.Medium">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">fill_parent</item>
		<item
			name="android:textColor">#000000</item>
		<item
			name="android:background">@drawable/background</item>
		<item
			name="android:orientation">vertical</item>
		<item
			name="android:padding">0px</item>
	</style>
	<style
		name="subheader_layout">
		<item
			name="android:layout_width">fill_parent</item>
			<item
			name="android:background">#181818</item>
	</style>
	<style
		name="subheader_text">
		<item
			name="android:textColor">#BDBEBD</item>
		<item
			name="android:padding">4px</item>
		<item
			name="android:textSize">22px</item>
	</style>
	<style
		name="subheader_separator">
		<item
			name="android:background">#66CC33</item>
		<item
			name="android:layout_height">1px</item>
		<item
			name="android:layout_width">fill_parent</item>
	</style>
	<style
		name="h3">
		<item
			name="android:textColor">#000000</item>
		<item
			name="android:padding">2px</item>
		<item
			name="android:textSize">26px</item>
	</style>
</resources>